# bindings (ncmpcpp)
# @author nate zhou
# @since 2023,2024
# my vim-like keybindings for ncursers music player client plus plus

# playback
def_key "f"
  seek_forward
def_key "b"
  seek_backward
def_key "space"
    pause
def_key "n"
    next
def_key "p"
    previous
def_key "z"
  toggle_random
def_key "r"
  toggle_repeat
def_key "s"
  toggle_single
def_key "+"
    volume_up
def_key "="
    volume_up
def_key "i"
  show_song_info
# search online
def_key "I"
  show_artist_info
def_key "."
  show_lyrics
#

# playlist
def_key "d"
  delete_stored_playlist
def_key "c"
  clear_playlist
def_key "c"
  clear_main_playlist
def_key "x"
  delete_playlist_items
def_key "a"
  add_selected_items
def_key "S"
  save_playlist

# navigation
def_key "o"
  jump_to_playing_song
def_key "j"
    scroll_down
def_key "k"
    scroll_up
def_key "h"
    previous_column
def_key "l"
    next_column
def_key "h"
  jump_to_parent_directory
def_key "l"
  enter_directory
def_key "l"
  run_action
def_key "l"
  play_item
def_key "ctrl-p"
    page_up
def_key "ctrl-u"
    page_down
def_key "G"
  move_end
def_key "g"
  move_home
def_key "n"
    next_found_item
def_key "N"
    previous_found_item
def_key "M"
  show_media_library
def_key "m"
  toggle_media_library_columns_mode
def_key "t"
  show_tag_editor
def_key "U"
  update_database
def_key "S"
  reset_search_engine
def_key "S"
  show_search_engine
def_key "P"
  show_playlist
# master/slave screen
def_key ","
  toggle_screen_lock
def_key "ctrl-h"
  master_screen
def_key "ctrl-l"
  slave_screen

# select
def_key "K"
  select_item
  scroll_up
def_key "J"
  select_item
  scroll_down
def_key "v"
  reverse_selection
def_key "V"
  remove_selection
def_key "B"
  select_album

