#!/usr/bin/sh
# @author nate zhou
# @since 2023,2024,2025
# dw, dunst weather
# @depends: libnotify, dunst, updw

# use notification software like dunst to show weather info from local cache downloaded by my another script updw
# running with dmenu/wmenu is recommended

if [ $# -eq 0 ]; then
    if [ -f "$HOME/.cache/weather/wttr" ]; then

        wttr=$(cat $HOME/.cache/weather/wttr)

        # check if the file is empty
        if [ -z "$wttr" ]; then
            msg="~/.cache/weather/wttr is empty, try running updw ?"
            [ "$XDG_SESSION_TYPE" != "tty" ] && notify-send -r 23 "$(basename $0)" "$msg"
            echo $msg
        else
            msg=$wttr
            [ "$XDG_SESSION_TYPE" != "tty" ] && notify-send -r 24 "$(basename $0)" "$msg"
            echo $msg
        fi

    else
        msg="~/.cache/weather/wttr does not exist, try running updw ?"
        [ "$XDG_SESSION_TYPE" != "tty" ] && notify-send -r 23 "$(basename $0)" "$msg"
        echo $msg
    fi
else
    msg=$(curl wttr.in/$1?format=4)
    [ "$XDG_SESSION_TYPE" != "tty" ] && notify-send -r 24 "$(basename)" "$msg"
fi

