#!/usr/bin/env bash

. "${HOME}/.cache/wal/colors.sh"

case "$(printf "kill\nsuspend\nreboot\nshutdown" | wmenu -i -p "System power:" -f "Source Sans 3 Bold 12" -S $color1 -s $background -n $color1 -M $color1 -N $background)" in
	kill) ps -u $USER -o pid,comm,%cpu,%mem | wmenu -i -l 10 -p "Kill program:" -f "Source Sans 3 Bold 12" -S $color1 -s $background -n $color1 -M $color1 -N $backgroundKill: | awk '{print $1}' | xargs -r kill ;;
	suspend) suspend ;;
	reboot) reboot ;;
	shutdown) poweroff ;;
	*) exit 1 ;;
esac
